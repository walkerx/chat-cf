{
	"name": "chat-cf",
	"type": "module",
	"scripts": {
		"dev": "pnpm run build:frontend && wrangler dev",
		"dev:debug": "pnpm run build:frontend && wrangler dev --local --inspector-port 9229",
		"dev:frontend": "vite",
		"build:frontend": "vite build",
		"build": "pnpm run build:frontend && wrangler deploy --dry-run && echo 'âœ“ Build successful'",
		"deploy": "pnpm run build:frontend && wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"type-check": "tsc --noEmit && tsc -p public/tsconfig.json --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"pre-commit": "pnpm run cf-typegen && pnpm run type-check",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply DB --local",
		"db:migrate:prod": "wrangler d1 migrations apply DB --remote",
		"db:drop": "drizzle-kit drop",
		"seed:characters": "tsx scripts/seed-character-cards.ts"
	},
	"dependencies": {
		"@huggingface/jinja": "^0.5.1",
		"@supabase/supabase-js": "^2.84.0",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"dompurify": "^3.3.0",
		"drizzle-orm": "^0.44.7",
		"hono": "^4.10.5",
		"i18next": "^25.6.3",
		"i18next-browser-languagedetector": "^8.2.0",
		"jsonwebtoken": "^9.0.2",
		"openai": "^6.9.0",
		"png-chunk-text": "^1.0.0",
		"png-chunks-extract": "^1.0.0",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"react-easy-crop": "^5.5.5",
		"react-helmet-async": "^2.0.5",
		"react-i18next": "^16.3.5",
		"react-router-dom": "^7.9.6"
	},
	"devDependencies": {
		"@paralleldrive/cuid2": "^2.3.1",
		"@types/node": "^20.18.0",
		"@vitejs/plugin-react": "^5.1.1",
		"drizzle-kit": "^0.31.7",
		"fast-check": "^4.3.0",
		"tsx": "^4.20.6",
		"typescript": "^5.9.0",
		"vite": "^7.2.2",
		"vitest": "^2.1.0",
		"wrangler": "^4.50.0"
	}
}